</nav>
<!-- Contenedor Principal para el Login -->
<main class="login-main-container">
    <div class="login-card">
        <div class="card-header">
            <!-- Si tienes un logo, puedes ponerlo aquí -->
            <!-- <img src="tu-logo.png" alt="Logo Huellitas" class="logo"> -->
            <h2>Bienvenido a Huellitas</h2>
            <p class="text-muted mb-0">Inicia sesión para continuar</p>
        </div>
        <div class="card-body">
            <!-- El formulario sigue siendo el mismo y funcional -->
            <form id="loginForm" method="post" action="/login">
                <div class="mb-3">
                    <label for="username" class="form-label">Usuario o Email</label>
                    <input type="text" class="form-control" id="email" name="email" placeholder="Ingresa tu usuario o email" required autofocus>
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu contraseña" required>
                </div>

                <!-- Mensaje de error (opcional, para mostrar desde .NET) -->
                <!-- <div class="alert alert-danger" role="alert" style="display: none;" id="error-message">
                    Usuario o contraseña incorrectos.
                </div> -->

                <div class="d-grid">
                    <button type="submit" class="btn btn-login">Ingresar</button>
                </div>
            </form>

            <a href="#" class="forgot-password-link">¿Olvidaste tu contraseña?</a>

        </div> <!-- Fin card-body -->
    </div> <!-- Fin login-card -->
</main> <!-- Fin login-main-container -->
