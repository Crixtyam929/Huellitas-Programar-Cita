<title>Huellitas - Inicio de Sesión</title>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<!-- Estilos Personalizados -->
<style>
    /* Define los colores */
    :root {
        --color-verde-principal: #5cb85c; /* Verde principal */
        --color-verde-oscuro: #4cae4c; /* Verde para hover/activo */
        --color-beige-fondo: #f5f5dc; /* Beige para el fondo del cuerpo */
        --color-blanco: #ffffff;
        --color-texto-principal: #333;
        --color-verde-suave: #e8f5e9; /* Verde muy pálido para acentos */
        --color-texto-nav: var(--color-blanco); /* Texto blanco para la nav */
    }

    body {
        background-color: var(--color-beige-fondo);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        /* Usamos flexbox para el layout general */
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Asegura que el body ocupa al menos toda la altura */
    }

    /* Estilos de la Barra de Navegación */
    .navbar-custom {
        background-color: var(--color-verde-principal);
        padding-top: 0.8rem;
        padding-bottom: 0.8rem;
    }

        .navbar-custom .navbar-brand {
            color: var(--color-texto-nav);
            font-weight: 600;
            font-size: 1.5rem; /* Tamaño más grande para la marca */
        }

            .navbar-custom .navbar-brand:hover {
                color: rgba(255, 255, 255, 0.85); /* Ligero cambio en hover */
            }

    /* Estilos para el contenedor principal del login */
    .login-main-container {
        flex-grow: 1; /* Hace que este contenedor ocupe el espacio restante */
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem 1rem; /* Padding arriba/abajo y a los lados */
    }

    .login-card {
        background-color: var(--color-blanco);
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        overflow: hidden;
    }

        .login-card .card-header {
            background-color: var(--color-verde-suave);
            border-bottom: 1px solid #dee2e6;
            padding: 2rem 1.5rem;
            text-align: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

            .login-card .card-header h2 {
                color: var(--color-verde-principal);
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

            .login-card .card-header img.logo {
                max-height: 50px;
                margin-bottom: 1rem;
                /* content: url('path/to/your/logo.png'); */
            }

        .login-card .card-body {
            padding: 2rem;
        }

    .form-label {
        font-weight: 500;
        color: var(--color-texto-principal);
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: var(--color-verde-principal);
            box-shadow: 0 0 0 0.25rem rgba(92, 184, 92, 0.25);
        }

    .btn-login {
        background-color: var(--color-verde-principal);
        border-color: var(--color-verde-principal);
        color: var(--color-blanco);
        padding: 0.75rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 5px;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-login:hover {
            background-color: var(--color-verde-oscuro);
            border-color: var(--color-verde-oscuro);
            color: var(--color-blanco);
        }

    .forgot-password-link {
        display: block;
        text-align: center;
        margin-top: 1rem;
        color: var(--color-verde-principal);
        text-decoration: none;
        font-size: 0.9rem;
    }

        .forgot-password-link:hover {
            text-decoration: underline;
            color: var(--color-verde-oscuro);
        }
</style>



<!-- Barra de Navegación -->
<nav class="navbar navbar-expand-lg navbar-custom">
