
@{
    ViewBag.Title = "LoginEmployee";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acceso Empleados - Huellitas</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Estilos Personalizados Embebidos -->
    <style>
        /* Define los colores (mismos que antes) */
        :root {
            --color-verde-principal: #5cb85c;
            --color-verde-oscuro: #4cae4c;
            --color-beige-fondo: #f5f5dc;
            --color-blanco: #ffffff;
            --color-texto-principal: #333;
            --color-verde-suave: #e8f5e9;
            --color-texto-nav: var(--color-blanco);
            --color-texto-oscuro: #343a40;
        }

        /* Estilo general del cuerpo (igual) */
        body {
            background-color: var(--color-beige-fondo);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Estilos de la Barra de Navegación (igual) */
        .navbar-custom {
            background-color: var(--color-verde-principal);
            padding-top: 0.8rem;
            padding-bottom: 0.8rem;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

            .navbar-custom .navbar-brand {
                color: var(--color-texto-nav);
                font-weight: bold;
                font-size: 1.4rem;
            }

                .navbar-custom .navbar-brand:hover {
                    color: rgba(255, 255, 255, 0.85);
                }

            .navbar-custom .nav-link {
                color: var(--color-texto-nav);
            }

                .navbar-custom .nav-link:hover {
                    color: rgba(255, 255, 255, 0.85);
                }

        /* Contenedor principal (igual) */
        .login-main-container {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem 1rem;
        }

        /* Tarjeta de Login (misma estructura, distinto header) */
        .login-card {
            background-color: var(--color-blanco);
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 400px; /* Ancho estándar para login */
            width: 100%;
            overflow: hidden;
        }

            /* === DIFERENCIA VISUAL === */
            /* Estilo del Header para Empleados */
            .login-card .card-header.employee-header {
                background-color: var(--color-verde-principal); /* Fondo verde principal */
                color: var(--color-texto-nav); /* Texto blanco */
                border-bottom: 1px solid var(--color-verde-oscuro); /* Borde inferior más oscuro */
                padding: 1.5rem;
                text-align: center;
            }

                .login-card .card-header.employee-header h2 {
                    color: var(--color-texto-nav); /* Título blanco */
                    font-weight: 600;
                    margin-bottom: 0.25rem;
                }

                .login-card .card-header.employee-header .text-muted {
                    color: rgba(255, 255, 255, 0.8) !important; /* Texto secundario más claro */
                }
            /* === FIN DIFERENCIA VISUAL === */


            .login-card .card-body {
                padding: 2rem;
            }

        /* Estilos de formulario (igual) */
        .form-label {
            font-weight: 500;
            color: var(--color-texto-principal);
            margin-bottom: 0.3rem;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
            padding: 0.5rem 0.75rem;
            font-size: 0.95rem;
        }

            .form-control:focus {
                border-color: var(--color-verde-principal);
                box-shadow: 0 0 0 0.25rem rgba(92, 184, 92, 0.25);
            }

        /* Botón (igual) */
        .btn-login {
            background-color: var(--color-verde-principal);
            border-color: var(--color-verde-principal);
            color: var(--color-blanco);
            padding: 0.75rem;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 5px;
            transition: background-color 0.2s ease-in-out;
        }

            .btn-login:hover {
                background-color: var(--color-verde-oscuro);
                border-color: var(--color-verde-oscuro);
            }

        /* Enlaces inferiores */
        .bottom-link {
            display: block;
            text-align: center;
            margin-top: 1rem;
            color: var(--color-verde-principal);
            text-decoration: none;
            font-size: 0.9rem;
        }

            .bottom-link:hover {
                text-decoration: underline;
                color: var(--color-verde-oscuro);
            }
    </style>

</head>
<body>

    <!-- Barra de Navegación (puede ser la misma) -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <!-- Enlace a la página principal o portal de empleados -->
            <a class="navbar-brand" href="#">
                🐾 Huellitas (Portal Empleados)
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavHuellitasEmp" aria-controls="navbarNavHuellitasEmp" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavHuellitasEmp">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <!-- Podrías añadir enlaces específicos para empleados aquí si fuera necesario -->
                    <li class="nav-item">
                        <!-- Enlace opcional al login de usuario normal -->
                        <a class="nav-link" href="#">Acceso Usuarios</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenedor Principal para el Login de Empleados -->
    <main class="login-main-container">
        <div class="login-card">
            <!-- Header específico para empleados -->
            <div class="card-header employee-header">
                <h2>Acceso Empleados</h2>
                <p class="text-muted mb-0">Inicia sesión con tus credenciales</p>
            </div>
            <div class="card-body">

                <!-- El 'action' debe apuntar a la URL específica para el login de empleados -->
                <form action="/login/empleado" method="post" id="employeeLoginForm">

                    <!-- Placeholder para errores generales -->
                    <div id="form-error-summary-emp" class="alert alert-danger mb-3" role="alert" style="display: none;"></div>

                    <div class="mb-3">
                        <label for="username" class="form-label">Usuario o Email Empleado</label>
                        <!-- El 'name' puede ser el mismo o diferente según tu backend -->
                        <input type="text" id="email" name="email" class="form-control" placeholder="Tu usuario de empleado" required autofocus>
                        <span class="error-message" id="username-error-emp" style="display: none;"></span>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Tu contraseña" required>
                        <span class="error-message" id="password-error-emp" style="display: none;"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-login">Acceder</button>
                    </div>
                </form>

                <!-- Enlace para recuperación de contraseña de empleados (si existe) -->
                <a href="#" class="bottom-link">¿Problemas para acceder?</a>

            </div> <!-- Fin card-body -->
        </div> <!-- Fin login-card -->
    </main> <!-- Fin login-main-container -->
    <!-- Bootstrap JS Bundle (incluye Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Opcional: JS para validación específica de este formulario -->
    <script>
